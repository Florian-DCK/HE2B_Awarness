generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PlayerRegistration {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  pseudo    String
  createdAt DateTime @default(now())
}

model Scoreboard {
  id        String   @id @default(cuid())
  firstName String
  lastName  String
  email     String
  pseudo    String?
  ip        String?
  score     Int
  maxCombo  Int
  level     Int
  createdAt DateTime @default(now())
}
